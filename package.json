{
  "name": "metallic-metrics",
  "version": "0.9.0",
  "description": "StatsD's client for CARTO services",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CartoDB/metallic-metrics.git"
  },
  "keywords": [
    "StatsD",
    "metrics",
    "metallic"
  ],
  "author": "Daniel Garc√≠a Aubert <dgaubert@carto.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/CartoDB/metallic-metrics/issues"
  },
  "homepage": "https://github.com/CartoDB/metallic-metrics#readme",
  "engines": {
    "node": ">=7.6.0"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "metallic-interfaces": "^0.3.0",
    "node-statsd": "^0.1.1"
  },
  "scripts": {
    "build": "babel src -d lib --source-maps inline",
    "build:watch": "npm run build -- --watch",
    "coverage": "nyc --reporter=lcov npm test",
    "lint": "standard \"src/**/*.js\" \"test/**/*.js\"",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "preversion": "npm test",
    "test": "mocha --recursive -r babel-register -r source-map-support/register test",
    "test:watch": "npm run test -- -w"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "metallic-logger": "^0.9.0",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "sinon": "^4.1.2",
    "source-map-support": "^0.5.0",
    "standard": "^10.0.3"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
